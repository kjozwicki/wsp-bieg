<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net7.0-windows</TargetFramework>
        <Nullable>enable</Nullable>
        <UseWPF>true</UseWPF>
        <RootNamespace>Kugle</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
      <Folder Include="Model" />
      <Folder Include="Presentation\ViewModel" />
      <Folder Include="Tests\LogicTests" />
      <Folder Include="Tests\ModelTests" />
      <Folder Include="Tests\PresentationTests" />
    </ItemGroup>

    <ItemGroup>
      <ApplicationDefinition Include="Presentation\View\App.xaml">
        <Generator>MSBuild:Compile</Generator>
        <XamlRuntime>Wpf</XamlRuntime>
        <SubType>Designer</SubType>
      </ApplicationDefinition>
    </ItemGroup>

    <ItemGroup>
      <Page Update="Presentation\View\MainWindow.xaml">
        <Generator>MSBuild:Compile</Generator>
        <XamlRuntime>Wpf</XamlRuntime>
        <SubType>Designer</SubType>
      </Page>
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="MSTest.TestFramework" Version="2.2.10" />
    </ItemGroup>

</Project>
